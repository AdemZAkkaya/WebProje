@model IEnumerable<DergiProjesi.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Kategori Ekle", "Create",null,new { @class ="btn btn-primary" })
</p>
<hr />

@if (TempData["Category"] !=null)
{
     var category = (DergiProjesi.Models.Category)TempData["Category"];
    <div class="alert alert-success">
        <strong><span class="glyphicon glyphicon-ok"></span> @category.CategoryName</strong> isimli kategori başarıyla editlendi.
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:70%;">
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th style="width:16%;">
            @Html.DisplayNameFor(model => model.JournalCount)
        </th>
        <th style="width:150px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.CategoryName
        </td>
        <td>
            @item.JournalCount
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
